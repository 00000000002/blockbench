{
  "name": "Blockbench",
  "description": "Minecraft Block Model Editor",
  "version": "1.9.2",
  "author": "JannisX11",
  "main": "main.js",
  "build": {
    "appId": "blockbench",
    "category": "public.app-category.education",

    "mac": {
      "category": "macOS.application"
    },
    "files": [
      "assets/",
      "build/",
      "css/",
      "font/",
      "js",
      "main.js",
      "index.php",
      "package.json",
      "favicon.png",
      "icon.icns",
      "icon.ico",
      "icon.png"
    ],
    "dmg": {
      "contents": [
        {"x": 130, "y": 220},
        {"x": 410, "y": 220, "type": "link", "path": "/Applications"}
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "mac": {
    "target": "dmg"
  },
  "scripts": {
    "pack": "build --dir",
    "dist": "build"
  },
  "devDependencies": {
    "async": "^2.4.1",
    "electron": "^1.7.5",
    "electron-winstaller": "^2.5.2"
  }
}
